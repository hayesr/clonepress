<div class="row">
  <div class="medium-8 small-centered columns">
    
    <%= form_for(@post) do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :body %><br>
        <%= f.text_area :body, rows: 20, class: 'js-st-instance' %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
    
  </div>
</div>

<script>
  SirTrevor.setDefaults({uploadUrl: '/photos'});
  new SirTrevor.Editor({ el: $('.js-st-instance') });
</script>